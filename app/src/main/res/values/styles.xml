<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="counterText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">100sp</item>
        <item name="android:textColor">@color/counterText</item>
    </style>

    <style name="normalText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/normalText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button_round">
        <item name="android:layout_width">@dimen/width_item</item>
        <item name="android:layout_height">@dimen/height_item</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="button_rectangular" parent="normalText">
        <item name="android:background">@color/transparent</item>
    </style>
</resources>